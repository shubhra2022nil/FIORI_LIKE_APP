<mvc:View  xmlns = "sap.m" xmlns:mvc = "sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:f="sap.f"
controllerName = "sap.hr.mss.controller.View1"
> 
<Page title="First View">
<headerContent>
<Button  press = "onNext" icon = "sap-icon://arrow-right"/>
</headerContent>
<content>
<SearchField id="srchFld"></SearchField>
<List id="list1">
<items>
<DisplayListItem value="User friendly Starting Range" label="HP"></DisplayListItem>
<StandardListItem title="Apple" description="Flagship range"></StandardListItem>
<CustomListItem >
	<HBox>
				<core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
					<Link text="User Friendly Starting Range" />
					<Label text="Dell"/>
                    <Switch/>
				</VBox>
			</HBox>

</CustomListItem>
<ObjectListItem title="Banana" intro="A rich source of Potassium" number="100 INR" numberUnit="Dozen">
<attributes>
<ObjectAttribute text="Yellow" title="Color"></ObjectAttribute>
<ObjectAttribute text="Dozen" title="Unit"></ObjectAttribute>
</attributes>
<firstStatus>
<ObjectStatus text="No longer sold" state="Warning"></ObjectStatus>

</firstStatus>

</ObjectListItem>

<ActionListItem text="Next" press="onActionList">
</ActionListItem>
		
</items>


</List>
</content>
